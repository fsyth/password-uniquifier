{
  "manifest_version": 2,

  "name": "Password Uniquifier",
  "description": "Generates unique passwords for any site you visit from a master password",
  "version": "0.1",

  "page_action": {
    "default_title": "Generate password for this site",
    /*"default_icon": {
      "19": "icons/",
      "38": "icons/"
    },*/
    "default_popup": "www/index.html"
  },

  /*"icons": {
    "128": "icons/",
    "38": "icons/",
    "19": "icons/"
  },*/

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ]
}
